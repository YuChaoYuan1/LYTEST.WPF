<Window x:Class="LYTest.WPF.View.Windows.Window_ProtocolAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local1="clr-namespace:LYTest.WPF.View"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Foreground="{DynamicResource 字体颜色标准}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="Window_TipsMessage" Height="600" Width="1000"
        ResizeMode="NoResize" 
        FontSize="16"
        Background="Transparent" >
    <Window.Resources>
        <XmlDataProvider x:Key="DataFlag"
                         Source="/LYTest.WPF;component/ConfigData/DataFlag.xml"/>
        <local1:DataFlagItem x:Key="DataItemTemp"/>
    </Window.Resources>
    <Border BorderThickness="1"  CornerRadius="10" Background="White" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="10 10 0 0" MouseMove="Window_MouseMove">
                <Border.Background>
                    <LinearGradientBrush  EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#257ACD"     Offset="0"/>
                        <GradientStop Color="#48B7FC"  Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="协议添加" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" Margin="5 0 0 0"/>
                </StackPanel>
            </Border>

            <Border  Margin="3,5" VerticalAlignment="Top"  HorizontalAlignment="Right" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Image Width="32"  Name="imageClose"  VerticalAlignment="Top"
                Source="/Images/Close.png"  />
                <Border.Style>
                    <Style TargetType="Border" >
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#e0ecf8">
                <TextBox Name="txt_Search" Width="240" Margin="5 1 0 1" Text=""/>
                <Button Content="搜索" Width="60" Height="33" Margin="10 1 10 1"  Click="OnSearch" BorderThickness="0" Background="#2ea400"  Style="{Binding }" Foreground="White"/>
                <Button Content="添加" Width="60" Height="33" Margin="10 1 10 1"  Click="Btn_Add" BorderThickness="0" Background="#2ea400"  Style="{Binding }" Foreground="White"/>
                <Button Content="测试" Width="60" Height="33" Margin="10 1 10 1"  Click="Button_Click" BorderThickness="0" Background="#2ea400"  Style="{Binding }" Foreground="White"  Visibility="Collapsed"/>
            </StackPanel>


            <Grid Grid.Row="2">
                <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" >-->
                <DataGrid Margin="1,1,0.8,1.4"    Style="{StaticResource dataGridStyleGeneral}"
                                 HeadersVisibility="Column"   Name="protocolItem"
                                Grid.ColumnSpan="2">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="添加"  Width="40"  Binding="{Binding IsCheck}"/>
                        <DataGridTextColumn Header="标识名称"
                                    Width="200"   IsReadOnly="True"      Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="数据标识"
                                    Width="100"   IsReadOnly="True"     Binding="{Binding DataFlag}"/>
                        <DataGridTextColumn Header="数据标识698"
                                     Width="100"   IsReadOnly="True"    Binding="{Binding DataFlag698}"/>
                        <DataGridTextColumn Header="长度"
                                    Width="40"    IsReadOnly="True"  Binding="{Binding Length}"/>
                        <DataGridTextColumn Header="小数位"
                                    Width="60"     IsReadOnly="True"   Binding="{Binding DotLength}"/>
                        <DataGridTextColumn Header="格式"
                                Binding="{Binding DataFormat}"  IsReadOnly="True"    Width="160" />
                        <DataGridComboBoxColumn Header="功能" Width="60" SelectedItemBinding="{Binding Function}">
                            <DataGridComboBoxColumn.ItemsSource>
                                <col:ArrayList>
                                    <sys:String>读</sys:String>
                                    <sys:String>写</sys:String>
                                </col:ArrayList>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>

                        <DataGridTextColumn Header="写入内容"
                                Binding="{Binding ReadData}"
                                    Width="160"/>
                    </DataGrid.Columns>
                    <!--<DataGrid.ContextMenu >
                        <ContextMenu>
                            <MenuItem Header="选中" Click="MenuI_IsCheck"/>
                            <MenuItem Header="取消选中" Click="MenuI_IsClose"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>-->
                </DataGrid>

                <!--</ScrollViewer>-->
            </Grid>
        </Grid>
    </Border>
</Window>
