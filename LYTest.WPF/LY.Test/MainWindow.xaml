<Window x:Class="LY.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LY.Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MainVM x:Key="mainVM" />
    </Window.Resources>
    <Grid DataContext="{StaticResource mainVM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="144*"/>
            <RowDefinition Height="206*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="解析" Click="OnAsync" Width="100" Height="40" />
        </StackPanel>
        <TextBox Grid.Row="1" Text="{Binding Input}" />
        <TextBox Grid.Row="2" Text="{Binding Output}" />

    </Grid>
</Window>
