<UserControl x:Class="LYTest.WPF.Schema.View_RenameSchema"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.Schema" xmlns:ViewModel="clr-namespace:LYTest.ViewModel.Schema;assembly=LYTest.ViewModel"
             mc:Ignorable="d" 
              FontSize="24"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ViewModel:SchemaOperationViewModel x:Key="SchemaModel"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource SchemaModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Margin="3"
                 SelectedItem="{Binding SelectedSchema}"
                 ItemsSource="{Binding Schemas}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SCHEMA_NAME}" ToolTip="{Binding SCHEMA_NAME}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1"
                    Margin="3">
            <TextBlock Text="当前方案名称"
                       Margin="3,10"/>
            <TextBox Margin="3,10"
                       Text="{Binding SelectedSchema.SCHEMA_NAME}"
                       TextWrapping="Wrap" 
                       Background="{DynamicResource 窗口背景深色}" IsReadOnly="True"/>
            <TextBlock Text="新方案名称"
                       Margin="3,10"/>
            <TextBox TextWrapping="WrapWithOverflow"
                     Text="{Binding NewName}"/>
            <Button Content="重命名"
                    Margin="5"
                    Width="160"
                    CommandParameter="RenameSchema"
                    Command="{Binding LocalCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
