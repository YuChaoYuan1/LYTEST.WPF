<UserControl x:Class="LYTest.WPF.Controls.UserMenu2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:Converter="clr-namespace:LYTest.WPF.Converter"
             mc:Ignorable="d" 
             Background="{DynamicResource 窗口背景深色}"
             Height="60"
             Foreground="{DynamicResource 字体颜色标准}"
             MouseMove="UserControl_MouseMove"
             d:DesignHeight="60" d:DesignWidth="1280">
    <UserControl.Resources>
        <Converter:NotBoolConverter x:Key="NotBoolConverter"/>
    </UserControl.Resources>
    <Grid>
        <!--<Grid HorizontalAlignment="Right">
            <Polygon  Points="40 0 230 0 230 40 0 40" Fill="#00027B" Margin="0 3 0 0"/>
        </Grid>-->

        <StackPanel Orientation="Horizontal">

            <Border VerticalAlignment="Top" Height="50" Background="Transparent" Margin="0 0 0 0" >
                <Grid>
                    <Polygon  Points="0 0 180 0 140 30 0 30" Fill="#00027B"/>
                    <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Margin="4,0,0,0"
                        Name="stackPannelLogo">
                        <Image Margin="0,3,2,3" Name="MainLogo"
                            Height="25" Width="25" Stretch="Fill"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Source="/Images/Logo.png" />
                        <TextBlock Text="隆元科技-LY8001" Foreground="White" Margin="0" VerticalAlignment="Center"  FontSize="15" Name="TestName"/>
                    </StackPanel>
                    
                    <TextBlock Text="V1.0.0.0(ID10)" Foreground="White" Margin="15,35,0,0" VerticalAlignment="Center"  FontSize="15" Name="Version"/>

                </Grid>
            </Border>
            <StackPanel VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Margin="10,0,0,0"
                        Name="stackPannelMenu">
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Grid Width="300" Height="50"  HorizontalAlignment="Right" Margin="0 12 15 0"  Name="VerifyGrid" Visibility="Visible" >
                <Border CornerRadius="15"
                    Background="#A500027b" 
                    Name="TestMain" >
                    <!--Visibility="{Binding IsTestMainVisible, Converter={StaticResource BoolToVisibilityConverter},Mode=TwoWay}"-->
                    <Border.Effect>
                        <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="3" Opacity="0.5" Direction="0"></DropShadowEffect>
                    </Border.Effect>

                    <StackPanel Margin="0" Orientation="Horizontal"  IsEnabled="{Binding IsEnable}" x:Name="stackPanelController" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Margin" Value="5,0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="MyBackgroundElement" BorderBrush="{DynamicResource ForgroundBrush}" BorderThickness="0">
                                                <ContentPresenter x:Name="ButtonContentPresenter" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="MyBackgroundElement" Property="Opacity" Value="0.4"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="MyBackgroundElement" Property="Background" Value="#FACC2E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Width" Value="45"/>
                            </Style>

                        </StackPanel.Resources>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="RunningVerify"
						       IsEnabled="{Binding IsChecking, Converter={StaticResource NotBoolConverter}}"
                               ToolTip="连续检定,执行完当前检定项后检查下一个项目."
                               Cursor="Hand">
                            <Image Source="/Images/Continuity.png"/>
                        </Button>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="SingleSetVerify"
						       IsEnabled="{Binding IsChecking, Converter={StaticResource NotBoolConverter}}"
						       ToolTip="单组检定,执行完当前组项目后停止检定.">
                            <Image Source="/Images/SingleSet.png"/>
                        </Button>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="StepVerify"
						       IsEnabled="{Binding IsChecking, Converter={StaticResource NotBoolConverter}}"
						       ToolTip="单步检定,执行完当前检定项后停止检定.">
                            <Image Source="/Images/Start.png"/>
                        </Button>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="LoopVerify"
						       IsEnabled="{Binding IsChecking, Converter={StaticResource NotBoolConverter}}"
						       ToolTip="一直循环执行当前的检定项"
						       Visibility="Collapsed">
                            <Image   Source="/Images/Run.png"/>
                        </Button>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="StopVerify"
						       ToolTip="停止当前检定"
						       IsEnabled="{Binding IsChecking}">
                            <Image   Source="/Images/Stop.png"/>
                        </Button>
                        <Button Command="{Binding LocalCommand}"
						       CommandParameter="MeterDebug"
						       IsEnabled="{Binding IsChecking}"
                               ToolTip="锁定当前项目,进行调表"
                               Cursor="Hand"
                            Visibility="Visible" >
                            <Image Width="45" >
                                <Image.Resources>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/Images/Unlock.png"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMeterDebug}" Value="false">
                                                <Setter Property="Source" Value="/Images/Unlock.png"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMeterDebug}" Value="true">
                                                <Setter Property="Source" Value="/Images/Locking.png"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Resources>
                            </Image>
                        </Button>
                    </StackPanel>



                </Border>
            </Grid>

            <Grid>

                <StackPanel HorizontalAlignment="Right" 
                    Margin="5"
                    Border.MouseLeftButtonDown="StackPanel_MouseLeftButtonDown"
                    Orientation="Horizontal"
                    VerticalAlignment="Top">
                    <StackPanel.Resources>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="Border"   x:Key="StyleBorderClose">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <Border Margin="3,5">
                        <Image Width="24"  Name="imageMin"
                      VerticalAlignment="Top"
                    Source="/Images/Min.png" />
                    </Border>
                    <Border Margin="3,5" Name="borderMax">
                        <Image Width="24" Name="imageMax"
                   VerticalAlignment="Top"  Source="/Images/Reduction.png" />
                    </Border>
                    <Border Style="{StaticResource StyleBorderClose}"   Margin="3,5" >
                        <Image Width="24"  Name="imageClose"  VerticalAlignment="Top"
                Source="/Images/Close.png"  />
                    </Border>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom"  Margin="0 0 20 5">
                    <TextBlock Text="{Binding TimeText}" Name="TimeText" FontSize="12" />
                </StackPanel>
            </Grid>

        </StackPanel>






        <!--<StackPanel Orientation="Horizontal" 
                        Margin="8,8,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
        </StackPanel>-->


    </Grid>
</UserControl>
