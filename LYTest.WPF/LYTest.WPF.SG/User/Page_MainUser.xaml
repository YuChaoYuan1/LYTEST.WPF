<Page x:Class="LYTest.WPF.SG.User.Page_MainUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LYTest.WPF.SG.User"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page_MainUser">

        <StackPanel HorizontalAlignment="Center" Width="220" x:Name="stackPanel"
			VerticalAlignment="Center" >
            <Button Content="修改密码" Click="StackPanel_Click" Style="{DynamicResource PrimaryButtonStyle}"
				x:Name="buttonChangePassword" Height="30" Margin="10"/>
        <Button Content="添加用户" Style="{DynamicResource PrimaryButtonStyle}" 
				Visibility="{Binding CurrentUser.USER_POWER, ConverterParameter=1, Converter={StaticResource UserVisibilityConverter}}"
				Click="StackPanel_Click"
				x:Name="buttonAddUser" Height="30" Margin="10"/>
        <Button Content="删除用户" Style="{DynamicResource PrimaryButtonStyle}"
				Click="StackPanel_Click"
				Visibility="{Binding CurrentUser.USER_POWER, ConverterParameter=1, Converter={StaticResource UserVisibilityConverter}}"
				x:Name="buttonDeleteUser" Height="30" Margin="10"/>
        <Button Content="切换用户" Click="StackPanel_Click" Style="{DynamicResource PrimaryButtonStyle}"
				x:Name="buttonChangeUser" Height="30" Margin="10"/>
        </StackPanel>
</Page>
