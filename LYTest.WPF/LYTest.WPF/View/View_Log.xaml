<basemodel:DockControlDisposable  
             xmlns:basemodel="clr-namespace:LYTest.WPF.Model"
             x:Class="LYTest.WPF.View.View_Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.View"
             mc:Ignorable="d" 
             Foreground="{DynamicResource 字体颜色标准}"
             d:DesignHeight="300"
             d:DesignWidth="600">
    <Grid>
        <DataGrid Name="dataGrid"  Style="{StaticResource dataGridStyleLog}" >
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="menuItemClearLog"
                              Header="清空当前日志"
                              Click="MenuItem_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间"
                                    Binding="{Binding Time, StringFormat=\{0:HH:mm:ss\}}" 
                                    Width="auto"/>
                <DataGridTextColumn Header="类型"
                                    Binding="{Binding LogSource}" 
                                    Width="auto"/>
                <DataGridTextColumn  ElementStyle="{StaticResource StyleWrapText}"
                                     Header="说明"
                                     Binding="{Binding Message}"
                                     Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</basemodel:DockControlDisposable> 
