<Window x:Class="initialize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:initialize"
        mc:Ignorable="d"
        Title="初始化 LY8001 v1.0" Height="350" Width="600" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        FontSize="18"
        >
    <Grid>
        <Grid x:Name="panelRegion" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Label Content="选择区域"/>
                <ComboBox Name="CombRegion" MinWidth="330"/>
            </StackPanel>
            <Button Content="执行初始化" Click="Execute_Click" Grid.Row="3" Width="150"/>
        </Grid>
        <TextBox x:Name="TxtLog" IsReadOnly="True" Visibility="Collapsed" VerticalScrollBarVisibility="auto" HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
