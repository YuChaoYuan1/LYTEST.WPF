    <DockPanel LastChildFill="True" >
        <Grid DockPanel.Dock="Top" Height="80" Margin="10,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="当前用户:" FontSize="16"/>
                <TextBlock Margin="5,0" Text="{Binding CurrentUser.USER_NAME}" FontWeight="Bold"/>
            </StackPanel>
            <Button ToolTip="返回" Name="buttonBack" HorizontalAlignment="Left"
                    Width="40" Height="30" Click="Button_Click">
                <Image Source="/Images/返回.png" Height="21" />
            </Button>
        </Grid>
        <Border Background="White" CornerRadius="10" Margin="10" >
            <Frame Name="frameUser" NavigationUIVisibility="Hidden" />
        </Border>
