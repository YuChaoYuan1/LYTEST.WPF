<Window x:Class="LYTest.WPF.View.Windows.Window_ShemaSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.WPF.View.Windows"
        mc:Ignorable="d"
        Title="Window_ShemaSet" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        FontSize="16"
        ResizeMode="NoResize" 
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border BorderThickness="1"  CornerRadius="10"  Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
        </Border.Effect>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" CornerRadius="10 10 0 0"    MouseMove="Window_MouseMove">
                <Border.Background>
                    <LinearGradientBrush  EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#257ACD"     Offset="0"/>
                        <GradientStop Color="#48B7FC"  Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="方案设置" FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </StackPanel>

            </Border>
            <Grid Grid.Row="0"   Border.MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" HorizontalAlignment="Right" VerticalAlignment="Top" >
                <Grid.Resources>
                    <Style TargetType="Border"   x:Key="StyleBorderClose">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Border Style="{StaticResource StyleBorderClose}"   Margin="3,5" >
                    <Image Width="32"  Name="imageClose"  VerticalAlignment="Top" HorizontalAlignment="Right" 
                Source="/Images/Close.png"  />
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <DataGrid  Name="dataGrid_ShcemaInfo"   ItemsSource="{Binding SchemasALL}">
                    <DataGrid.Columns >
                        <DataGridTextColumn IsReadOnly="True" Header="方案编号" Binding="{Binding ID}" />
                        <DataGridTextColumn IsReadOnly="True" Header="方案名称" Binding="{Binding SCHEMA_NAME}"/>
                        <DataGridTextColumn Header="表类型" Binding="{Binding SCHEMA_METER_TYPE}"/>
                        <DataGridTextColumn Header="台体类型" Binding="{Binding SCHEMA_TEST_TYPE}"/>
                        <DataGridCheckBoxColumn Header="是否可用" 
                                               EditingElementStyle="{DynamicResource StyleEditCheckBox}"
                                                Binding="{Binding SCHEMA_ENABLED,Converter={StaticResource BoolBitConverter}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Button HorizontalAlignment="Right"  Margin="15"   Grid.Row=" 1"    ToolTip="保存所有的配置"
                  VerticalAlignment="Bottom"
                  CommandParameter="SetSchemaValue"
                  Command="{Binding LocalCommand}"
                    >
                <Image Width="40" Source="/Images/Save.png"/>
            </Button>
        </Grid>
    </Border>
</Window>
