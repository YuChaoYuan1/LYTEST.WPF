<basemodel:DockControlDisposable  
             xmlns:basemodel="clr-namespace:LYTest.WPF.Model" 
             x:Class="LYTest.WPF.View.View_InputConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.View" xmlns:ViewModel="clr-namespace:LYTest.ViewModel.InputPara;assembly=LYTest.ViewModel"
    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <basemodel:DockControlDisposable.Resources>
        <ViewModel:InputParaViewModel  x:Key="InputParaViewModel"/>
    </basemodel:DockControlDisposable.Resources>
    <Grid DataContext="{StaticResource InputParaViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left"
                VerticalAlignment="Center"
                CommandParameter="SaveParaUnits"
                Command="{Binding LocalCommand}"
                Margin="3">
            <Image Height="24"
                   Source="/Images/save.png"/>
        </Button>
        <DataGrid Name="dataGrid"
                  Grid.Row="1"
                  Style="{StaticResource dataGridStyleGeneral}"
                  ItemsSource="{Binding AllUnits}"
                  HeadersVisibility="Column"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="是否录入"
                                        Binding="{Binding IsDisplayMember}"/>
                <DataGridTextColumn Header="字段名称" IsReadOnly="True" Binding="{Binding FieldName}"/>
                <DataGridTextColumn Header="显示名称" Binding="{Binding DisplayName}"/>
                <DataGridComboBoxColumn x:Name="columnCodeType" Header="编码名称"
                    EditingElementStyle="{StaticResource StyleComboBox}"
                                    SelectedItemBinding="{Binding CodeName}"/>
                <DataGridTextColumn Header="默认值"
                                    Binding="{Binding DefaultValue}"/>
                <DataGridComboBoxColumn 
                    x:Name="columnValueType"
                                    Header="值类型"
                    EditingElementStyle="{StaticResource StyleComboBox}"
                                    SelectedItemBinding="{Binding ValueType}"/>
                <DataGridCheckBoxColumn Header="相同的值"
                                        Binding="{Binding IsSame}"/>
                <DataGridCheckBoxColumn Header="必须输入" 
                                        Binding="{Binding IsNecessary}"/>
                <DataGridCheckBoxColumn Header="换新表使用新的值" 
                                        Binding="{Binding IsNewValue}"/>
                <DataGridTextColumn Header="排序编号" 
                                    Binding="{Binding Index}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</basemodel:DockControlDisposable>  
