<basemodel:DockControlDisposable 
             xmlns:basemodel="clr-namespace:LYTest.WPF.SG.Model" 
             x:Class="LYTest.WPF.SG.View.View_MeterMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.SG.View"
             mc:Ignorable="d" 
             Foreground="{DynamicResource 字体颜色标准}"
             HorizontalAlignment="Left"
             d:DesignHeight="250"
             d:DesignWidth="600">

    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="191*"/>                                   
        </Grid.RowDefinitions>
        <Viewbox Stretch="Uniform" Margin="0,0,-0.2,-0.4" Grid.RowSpan="2">
            <Grid  Width="320" VerticalAlignment="Top">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" >
                    <Grid Margin="5" Width="auto" 
				             HorizontalAlignment="Left"
				            Visibility="{Binding IsSingle, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="3,15"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition  Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0"
					               Text="{Binding Ua, StringFormat=\{0:F3\} V}"
					               HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1"
					               Text="{Binding Ia, StringFormat=\{0:F4\} A}"
					               HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="2"
					               Text="{Binding PhaseA, StringFormat=\{0:F4\} °}"
					               HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="0"
                                   Grid.Row="1"
					              Text="{Binding P, StringFormat=\{0:F3\} W}"
					              HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1"
                                   Grid.Row="1"
					               Text="{Binding Q, StringFormat=\{0:F3\} Var}"
					               HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="2"
                                   Grid.Row="1"
					               Text="{Binding S, StringFormat=\{0:F3\} VA}"
					               HorizontalAlignment="Left"/>
                    </Grid>
                    <StackPanel Visibility="{Binding IsThree, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid Margin="5" Width="auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="P" Margin="10,0,0,0" 
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Grid.RowSpan="2" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
					               	   Text="{Binding P, StringFormat=\{0:F3\} W}"
                                       VerticalAlignment="Center"
						               HorizontalAlignment="Left"/>
                            <TextBlock Text="Q" Margin="10,0,0,0" 
                                       Grid.Column="2"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3"
			 	                       Text="{Binding Q, StringFormat=\{0:F3\} Var}"
                                       VerticalAlignment="Center"
						               HorizontalAlignment="Left"/>
                            <TextBlock Text="S" Margin="10,0,0,0" 
                                       Grid.Column="4"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="5"
						               Text="{Binding S, StringFormat=\{0:F3\} VA}"
                                       VerticalAlignment="Center"
						HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Margin="5" Width="auto">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF00"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="A" Margin="10,0,0,0" 
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Grid.RowSpan="2" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
					                   Text="{Binding Ua, StringFormat=\{0:F3\} V}"
					                   HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
						               Text="{Binding Ia, StringFormat=\{0:F4\} A}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
						Text="{Binding PhaseA, StringFormat=\{0:F4\} °}"
						HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
						               Text="{Binding Pa, StringFormat=\{0:F3\} W}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="1"
						               Text="{Binding Qa, StringFormat=\{0:F3\} Var}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
                                       Grid.Row="1"
						               Text="{Binding Sa, StringFormat=\{0:F3\} VA}"
						               HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Margin="5" Width="auto">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Green"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="B" Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Grid.RowSpan="2" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
						               Text="{Binding Ub, StringFormat=\{0:F3\} V}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
						               Text="{Binding Ib, StringFormat=\{0:F4\} A}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
						               Text="{Binding PhaseB, StringFormat=\{0:F4\} °}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
						               Text="{Binding Pb, StringFormat=\{0:F3\} W}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="1"
						               Text="{Binding Qb, StringFormat=\{0:F3\} Var}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
                                       Grid.Row="1"
						               Text="{Binding Sb, StringFormat=\{0:F3\} VA}"
						               HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Margin="5" Width="auto">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="C" Margin="10,0,0,0"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Grid.RowSpan="2" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
						               Text="{Binding Uc, StringFormat=\{0:F3\} V}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
						               Text="{Binding Ic, StringFormat=\{0:F4\} A}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
						               Text="{Binding PhaseC, StringFormat=\{0:F4\} °}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
						               Text="{Binding Pc, StringFormat=\{0:F3\} W}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="1"
						               Text="{Binding Qc, StringFormat=\{0:F3\} Var}"
						               HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="3"
                                       Grid.Row="1"
					                   Text="{Binding Sc, StringFormat=\{0:F3\} VA}"
					                   HorizontalAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Viewbox>
    </Grid>
</basemodel:DockControlDisposable>
