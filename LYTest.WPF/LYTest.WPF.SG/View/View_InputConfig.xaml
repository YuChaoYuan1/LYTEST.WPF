<basemodel:DockControlDisposable  
             xmlns:basemodel="clr-namespace:LYTest.WPF.SG.Model" 
             x:Class="LYTest.WPF.SG.View.View_InputConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.SG.View" xmlns:ViewModel="clr-namespace:LYTest.ViewModel.InputPara;assembly=LYTest.ViewModel"
    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <basemodel:DockControlDisposable.Resources>
        <ViewModel:InputParaViewModel  x:Key="InputParaViewModel"/>
    </basemodel:DockControlDisposable.Resources>
    <Grid DataContext="{StaticResource InputParaViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" Margin="3"
                CommandParameter="SaveParaUnits"
                Command="{Binding LocalCommand}" >
            <Image Height="24" Source="{DynamicResource 保存}"/>
        </Button>
        <DataGrid Name="dataGrid" Grid.Row="1" ItemsSource="{Binding AllUnits}" HeadersVisibility="Column" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="是否录入" CanUserSort="False"  Binding="{Binding IsDisplayMember}"/>
                <DataGridTextColumn Header="字段名称" CanUserSort="False" IsReadOnly="True" Binding="{Binding FieldName}"/>
                <DataGridTextColumn Header="显示名称" CanUserSort="False" Binding="{Binding DisplayName}"/>
                <DataGridComboBoxColumn x:Name="columnCodeType" CanUserSort="False" Header="编码名称"
                    EditingElementStyle="{StaticResource StyleComboBox}" SelectedItemBinding="{Binding CodeName}"/>
                <DataGridTextColumn Header="默认值" CanUserSort="False" Binding="{Binding DefaultValue}"/>
                <DataGridComboBoxColumn x:Name="columnValueType" Header="值类型" CanUserSort="False"
                    EditingElementStyle="{StaticResource StyleComboBox}" SelectedItemBinding="{Binding ValueType}"/>
                <DataGridCheckBoxColumn Header="相同的值" CanUserSort="False" Binding="{Binding IsSame}"/>
                <DataGridCheckBoxColumn Header="必须输入" CanUserSort="False" Binding="{Binding IsNecessary}"/>
                <DataGridCheckBoxColumn Header="换新表使用新的值" CanUserSort="False" Binding="{Binding IsNewValue}"/>
                <DataGridTextColumn Header="排序编号" CanUserSort="False" Binding="{Binding Index}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</basemodel:DockControlDisposable>  
