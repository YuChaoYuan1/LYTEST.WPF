<Window x:Class="LYTest.WPF.SG.View.Windows.Window_AddNewCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.WPF.SG.View.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Background="{DynamicResource 窗口背景色}"
        WindowStartupLocation="CenterScreen"
        Control.MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="Window_AddNewCode" Height="500" Width="500" >
    <Border BorderBrush="{DynamicResource 边框颜色}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Background="{DynamicResource 窗口背景深色}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CODE_NAME}" Margin="8,3"/>
                    <TextBlock Text="{Binding CODE_TYPE}" Margin="8,3"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListBox Margin="3" Grid.Row="1" ItemsSource="{Binding Children}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="300" Margin="3" TextWrapping="WrapWithOverflow" Text="{Binding CODE_NAME}"/>
                                <TextBlock Width="40" Margin="3" TextWrapping="WrapWithOverflow" Text="{Binding CODE_VALUE}"/>
                                <Button Click="DeleteItem_Click">
                                    <Image Width="18" Source="{DynamicResource 删除}" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Border Background="White" Margin="10" CornerRadius="10">
                    <StackPanel Margin="10">
                        <TextBlock Text="编码名称:" />
                        <TextBox HorizontalAlignment="Stretch" Name="textBoxName"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="编码值（数字）:" />
                            <CheckBox Content="自动编码" x:Name="chkAutoCode" VerticalAlignment="Center" IsChecked="True"/>
                        </StackPanel>
                        <TextBox HorizontalAlignment="Stretch" IsReadOnly="{Binding ElementName=chkAutoCode,Path=IsChecked}"
                           Name="textBoxValue"/>
                        <UniformGrid Margin="0,15" Columns="2" Height="40" >
                            <Button Margin="0,3,5,3" Content="确定" Click="Click_Enter" Style="{DynamicResource PrimaryButtonStyle}" />
                            <Button Margin="5,3,0,3" Content="取消" Click="Click_Quit" Style="{DynamicResource PrimaryButtonStyle}" />
                        </UniformGrid>
                    </StackPanel>

                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
