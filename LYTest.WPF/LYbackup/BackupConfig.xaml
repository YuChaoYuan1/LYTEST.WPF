<UserControl x:Class="LYbackup.BackupConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYbackup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontSize="18">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="3"/>
            </Style>
            <Style TargetType="CheckBox">
                <Setter Property="Margin" Value="50,3"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="每"/>
                <TextBox Text="1" Width="50"/>
                <TextBlock Text="天，备份一次"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="备份到 D:\自动备份LY8001-M2\"/>
        </StackPanel>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="备份以下数据："/>
            <CheckBox Content="系统数据库" IsChecked="True"/>
            <CheckBox Content="检定数据库" IsChecked="True"/>
            <CheckBox Content="检定方案数据库" IsChecked="True"/>
            <CheckBox Content="临时数据库" IsChecked="True"/>
            <CheckBox Content="报表模板" IsChecked="True"/>
            <CheckBox Content="XML配置文件" IsChecked="True"/>

        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="保存配置" Click="Save_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
