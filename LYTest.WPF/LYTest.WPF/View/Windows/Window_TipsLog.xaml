<Window x:Class="LYTest.WPF.View.Windows.Window_TipsLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.WPF.View.Windows"
        mc:Ignorable="d"
        Foreground="{DynamicResource 字体颜色标准}"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="Window_TipsMessage" Height="600" Width="300"
        MouseMove="Window_MouseMove"
        FontSize="32"
        ResizeMode="NoResize" 
        Background="Transparent"
       >
    <Border BorderThickness="1"  CornerRadius="10" Background="White" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" CornerRadius="10 10 0 0">
                <Border.Background>
                    <LinearGradientBrush  EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#257ACD"     Offset="0"/>
                        <GradientStop Color="#48B7FC"  Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/Warn.png" Width="40" Height="40" Margin="0 0 10 0"/>
                    <TextBlock Text="日 志" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </StackPanel>
 
            </Border>
            <Grid Grid.Row="0"   Border.MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" HorizontalAlignment="Right" VerticalAlignment="Top" >
                <Grid.Resources>
                    <Style TargetType="Border"   x:Key="StyleBorderClose">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Border Style="{StaticResource StyleBorderClose}"   Margin="3,5" >
                    <Image Width="32"  Name="imageClose"  VerticalAlignment="Top" HorizontalAlignment="Right" 
                Source="/Images/Close.png"  />
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <DataGrid  Name="Log_Data">
                    
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
