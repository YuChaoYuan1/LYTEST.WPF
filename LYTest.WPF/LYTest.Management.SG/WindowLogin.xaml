<Window x:Class="LYTest.DataManager.SG.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.DataManager.SG"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="WindowLogin"
        Height="200" Width="400" 
        AllowsTransparency="True" 
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        FontFamily="Calibri"
        FontSize="32"
        ResizeMode="NoResize" 
        Background="Transparent">
    <Border BorderThickness="1"  CornerRadius="10" Margin="5" Background="{DynamicResource 窗口背景色}">
        <Border.Effect>
            <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
        </Border.Effect>
        <!--<Border.Background>
            <LinearGradientBrush  EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#257ACD"     Offset="0"/>
                <GradientStop Color="#48B7FC"  Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>-->
        <Grid Name="gridLogIn" Margin="20,10" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Name="textBlockLogin" VerticalAlignment="Center" MaxWidth="350" TextWrapping="Wrap"   FontSize="26"/>
            <ProgressBar HorizontalAlignment="Stretch" Name="timeBar" Grid.Row="1" Margin="10 0 10 0"/>
            <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80" Height="30"
                    Content="取消" Background="Transparent" Foreground="Black"  Click="Button_Click" FontSize=" 20" />
        </Grid>
    </Border>

</Window>
