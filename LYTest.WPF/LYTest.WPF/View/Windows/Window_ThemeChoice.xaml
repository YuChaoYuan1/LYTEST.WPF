<Window x:Class="LYTest.WPF.View.Windows.Window_ThemeChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.WPF.View.Windows"
        mc:Ignorable="d"
        Foreground="{DynamicResource 字体颜色标准}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="Window_TipsMessage" Height="650" Width="1100"
        MouseMove="Window_MouseMove"
        ResizeMode="NoResize" 
        FontSize="32"
        Background="Transparent" >
    <Border BorderThickness="1"  CornerRadius="10" Background="White" Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="10 10 0 0">
                <Border.Background>
                    <LinearGradientBrush  EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#257ACD"     Offset="0"/>
                        <GradientStop Color="#48B7FC"  Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/Theme.png" Width="40" Height="40" Margin="0 0 10 0"/>
                    <TextBlock Text="主题修改" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </Border>

            <Border  Margin="3,5" VerticalAlignment="Top"  HorizontalAlignment="Right" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Image Width="32"  Name="imageClose"  VerticalAlignment="Top"
                Source="/Images/Close.png"  />
                <Border.Style>
                        <Style TargetType="Border" >
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                </Border.Style>
            </Border>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"   Margin="5,5">
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="ThemePic1"  Grid.Column="0" Stretch="Fill" Width="513"  Height="300" HorizontalAlignment="Right"/>
                    <Image Source="/Images/NextStep.png" Width="32" Height="32" Margin="4 0 4 0"  Grid.Column="1"/>
                    <Image x:Name="ThemePic2"  Grid.Column="2" Stretch="Fill" Width="513"  Height="300" HorizontalAlignment="Left" />                         
                </Grid>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="主题颜色:"/>
                <ComboBox 
                         Margin="10 0 30 0"
				         x:Name="comboBoxTheme"
				         HorizontalAlignment="Center"
				         VerticalAlignment="Center"
                         SelectionChanged="comboBoxTheme_SelectionChanged"
                         Width="300"
				         Style="{DynamicResource StyleComboBox}" 
                          >
                </ComboBox>
                <Button Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="45"
                    Content="保存" Background="#48B7FC" Foreground="White" Click="Button_Click"  Margin="0 0 20 0" />
            </StackPanel>
     


        </Grid>
    </Border>
</Window>
