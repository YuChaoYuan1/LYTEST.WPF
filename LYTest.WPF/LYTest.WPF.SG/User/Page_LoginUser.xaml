<Page x:Class="LYTest.WPF.SG.User.Page_LoginUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LYTest.WPF.SG.User"
      mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"  
      Title="Page_LoginUser">

    <StackPanel Width="220" Height="160">
        <ComboBox Text="用户名" Name="comboBoxUserName"
                Style="{DynamicResource StyleComboBox}" Height="30" Margin="0,5" IsEditable="True" />
        <PasswordBox Name="passwordBox" />
        <Button Content="登录" Click="Button_Click" Height="30" Margin="0,20"
                Style="{DynamicResource PrimaryButtonStyle}" />
        <TextBlock Name="textBlockLog" Margin="10"
            VerticalAlignment="Center" HorizontalAlignment="Center" />
                      
    </StackPanel>
</Page>
