<Window x:Class="LYTest.WPF.View.Windows.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:LYTest.WPF.Controls"
        mc:Ignorable="d"
        Width="600"                           
        WindowStyle="None"
        Height="400"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        ResizeMode="NoResize"  
        AllowsTransparency="True"
        Foreground="{DynamicResource 字体颜色标准}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Background="Transparent"
        
        >
    <Grid>

        <Polygon Fill="Black" Points="0 35 30 35 30 0 0 35" Margin="100,0,0,0" Name="StyLogoPre"/>


        <Border Margin="0 20 0 0" CornerRadius="30" Name="StyBorder">
            <Border.Effect>
                <DropShadowEffect Color="Gray"  ShadowDepth="0" BlurRadius="5" Opacity="0.3" Direction="0"></DropShadowEffect>
            </Border.Effect>
            <Border.Background>
                <ImageBrush ImageSource="/Images/BackColor.jpg"/>
            </Border.Background>

            <Grid Margin="0 120 0 0" x:Name="gridContent" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>
                <Grid  HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5.224"/>
                        <RowDefinition Height="29.776"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="检验员" 
                           VerticalAlignment="Center" Margin="0,2.776,5,8" Grid.Row="1"/>
                    <ComboBox Width="140" 
                          Grid.Column="1"
                          Name="cmb_Checker"
                          VerticalAlignment="Center"
                          Style="{DynamicResource StyleComboBox2}"
                          IsEditable="True" Margin="0,0.776,0,7" Grid.Row="1" />
                    <TextBlock Text="密码"
                           Grid.Column="2"
                           Margin="15,2.776,5,8"
                           VerticalAlignment="Center" Grid.Row="1"/>
                    <PasswordBox  Name="passwordBoxChecker" 
                               Style="{DynamicResource LoginPassWord}"
                              Password="123456"
                              Grid.Column="3"
                              Width="140"
                              VerticalAlignment="Center" Margin="0,0.776,0,7" Grid.Row="1" 
                               >

                    </PasswordBox>
                    <TextBlock Text="核验员" 
                           Grid.Row="2"
                           VerticalAlignment="Center" 
                           Margin="0,11,5,11"/>
                    <ComboBox Width="140" 
                          Name="cmb_Auditor" 
                          Grid.Column="1"
                          Grid.Row="2"
                          VerticalAlignment="Center"
                          Style="{DynamicResource StyleComboBox2}"
                          IsEditable="True" Margin="0,9,0,10"/>
                    <TextBlock Text="密码" 
                           Grid.Column="2"
                           Grid.Row="2"
                           VerticalAlignment="Center" 
                           Margin="15,11,5,11"/>
                    <PasswordBox Grid.Column="3"  Name="passwordBoxAuditor"
                              Style="{DynamicResource LoginPassWord}"
                             Password="123456"
                             Grid.Row="2"
                             Width="140"
                             VerticalAlignment="Center" Margin="0,9,0,10"  >
                        <PasswordBox.BorderBrush>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
                        </PasswordBox.BorderBrush>
                    </PasswordBox>
                </Grid>

                <Grid HorizontalAlignment="Right"
                  Margin="0,0,110,0"
                  VerticalAlignment="Bottom"
                  Grid.Row="1">
                    <Grid.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="工作电压"/>
                    <Controls:ControlEnumComboBox 
                        x:Name="comboBoxVoltage"
                        SelectedItem="{Binding ProtectedVoltage}"
                        Width="70"
                        Grid.Column="1"
                        EnumName="SafeVoltage"
					    VerticalAlignment="Center"
					    Style="{DynamicResource StyleComboBox2}"/>
                    <TextBlock VerticalAlignment="Center" 
                           Grid.Column="2"
                           Margin="15,0,0,0"
                           Text="工作电流"/>
                    <Controls:ControlEnumComboBox 
                    SelectedItem="{Binding ProtectedCurrent}"
                    Width="70"
                    Margin="3,0"
                    Grid.Column="3"
                    EnumName="SafeCurrent"
					VerticalAlignment="Center" 
                    x:Name="comboBoxCurrent"
					Style="{DynamicResource StyleComboBox2}"/>
                </Grid>

                <Grid Grid.Row="2"	HorizontalAlignment="Center"
                           Margin="0,35,0,0"
                           VerticalAlignment="top"
                           Width="auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2e9afe"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{DynamicResource 字体颜色标准}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="Chrome"     SnapsToDevicePixels="true"    BorderThickness="0" 
                                                                   Background="#2e9afe">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                                            </Border.BorderBrush>
                                            <ContentPresenter      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                    Margin="1" 
                                                                    RecognizesAccessKey="True" 
                                                                    Content="{TemplateBinding Content}"
                                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter TargetName="Chrome"  Property="Background"    Value="#48B7FC"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="true">
                                                <Setter TargetName="Chrome" Property="Background" Value="#2E64FE"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!--<Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter TargetName="Chrome"
                                            Property="Background"
                                    Value="{DynamicResource 线性渐变颜色}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="true">
                                                <Setter TargetName="Chrome"  Property="BorderThickness" Value="1"/>
                                                <Setter TargetName="Chrome" Property="Background" Value="{DynamicResource 窗口背景色}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled"   Value="false">
                                                <Setter TargetName="Chrome" Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush   Color="#FFB3CEDE"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>-->
                        </Style>
                    </Grid.Resources>

                    <Button Content="登录"
                                Name="buttonLogin"
                                Click="Button_Click"
                                IsDefault="True"
                                Margin="0,0,60,0"
                                Height="32" Width="80"
                                FontSize="18"
                                VerticalAlignment="Center"/>
                    <Button Content="退出"
                                Name="buttonQuit"
                                Click="Button_Click"
                                Margin="60,0,0,0"
                                Grid.Column="1"
                                FontSize="18"
                                Height="32" Width="80"
                                VerticalAlignment="Center"/>
                </Grid>

            </Grid>
        </Border>

        <Polygon  Points=" 130 0 240  0 240 100 130 100" Fill="#00027B" Name="StyLogoBg"/>
        <Polygon  Points=" 135 0 235  0 235 100 135 100" Name="StyLogoFg" >
            <Polygon.Fill>
                <ImageBrush x:Name="Logo"/>
            </Polygon.Fill>
        </Polygon>
        <TextBlock x:Name="SoftModel" Text="LY8001" Foreground="White" Margin="250 30 0 0" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBlock x:Name="BenchName" Text="隆元科技电能检定装置" Foreground="White" Margin="250 70 0 0" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Grid Height="200" Name="gridLogIn"
              Visibility="Collapsed"
              VerticalAlignment="Top"
              HorizontalAlignment="Center"
              Margin="0,60,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <TextBlock Name="textBlockLogin"    VerticalAlignment="Center"
                       MaxWidth="400"
                       TextWrapping="Wrap"
                       FontSize="26"/>
            <ProgressBar Width="400"   Name="timeBar"   Grid.Row="1"/>
        </Grid>

        <CheckBox Name="Chk_IsDeom"
                  Content="演示模式"
                  Margin="20"
                  Foreground="White"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  IsChecked="{Binding IsDemo,Mode=TwoWay}"
                  Checked="IsDeom_Click"
                  Unchecked="IsDeom_Click2"/>

        <!--<Polygon.Fill>
                <ImageBrush ImageSource="/Images/Logo.png"/>
            </Polygon.Fill>-->

    </Grid>
</Window>
