<basemodel:DockControlDisposable  
      xmlns:Model="clr-namespace:LYTest.WPF.SG.Model" 
      x:Class="LYTest.WPF.SG.View.View_SaveData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:basemodel="clr-namespace:LYTest.WPF.SG.Model" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LYTest.WPF.SG.View"
      xmlns:CheckInfo="clr-namespace:LYTest.ViewModel.CheckInfo;assembly=LYTest.ViewModel"
      mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1200">

    <basemodel:DockControlDisposable.Resources>
        <CheckInfo:AllMeterResult x:Key="AllMeterResult"/>
    </basemodel:DockControlDisposable.Resources>
    <Grid  Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="auto" Margin="10,40,10,0">
                <StackPanel Name="stackPanelMeterInfo" DataContext="{Binding SelectedItem, ElementName=datagridMeters}"/>
            </ScrollViewer>
            <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="10,0,0,0" >
                <StackPanel Margin="0,10">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="3,0"/>
                        </Style>
                    </StackPanel.Resources>

                    <Grid Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="温度"/>
                        <TextBox Grid.Column="1" Name="textBoxTemperature" Margin="0,3" Text="23" />
                        <TextBlock Grid.Column="2" Text="℃"/>

                        <TextBlock Grid.Column="3" Text="湿度"/>
                        <TextBox Grid.Column="4" Name="textBoxHumidy" Margin="0,3" Text="50" />
                        <TextBlock Grid.Column="5" Text="%"/>
                    </Grid>

                    <StackPanel Margin="3" Orientation="Horizontal">
                        <TextBlock Text="有效期" VerticalAlignment="Center"/>
                        <TextBox Margin="3" Name="textBoxValidate" Text="9" Width="40"/>
                        <TextBlock Text="月" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Grid Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="检验员"/>
                        <ComboBox Grid.Column="1" Name="comboBoxTester" Style="{StaticResource StyleComboBox}"/>
                    </Grid>
                    <Grid Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="核验员"/>
                        <ComboBox Grid.Column="1" Name="comboBoxAuditor" Style="{StaticResource StyleComboBox}" />
                    </Grid>
                    <Grid Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="主管"/>
                        <ComboBox Grid.Column="1" Name="comboBoxBoss" Style="{StaticResource StyleComboBox}"/>
                    </Grid>
                    <Button FontSize="24" Height="34" Margin="10" Click="Button_Click" Content="保 存" Style="{DynamicResource PrimaryButtonStyle}" />
                </StackPanel>
            </Border>
        </Grid>
        <Border CornerRadius="10" Background="White" >
            <TabControl Margin="0,0,0,10">
                <TabItem Header="详细结论" Width="300">
                    <Grid  Name="gridMeterResult" DataContext="{StaticResource AllMeterResult}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid ItemsSource="{Binding ResultCollection.ItemsSource}"
                              IsReadOnly="True"
                              SelectionUnit="FullRow"
                              Name="datagridMeters"
                              HeadersVisibility="Column"
                             SelectionChanged="DataGrid_SelectionChanged" >
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="表位" Width="50" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding MeterInfo.MD_EPITOPE, Converter={StaticResource IndexFormatConverter}}"
                                                      IsChecked="{Binding YaoJian}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Binding="{Binding MeterInfo.MD_MADE_NO}" Header="出厂编号" Width="*"/>
                                <DataGridTemplateColumn Header="结论" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding MeterInfo.MD_RESULT}" 
                                                       Foreground="{Binding MeterInfo.MD_RESULT, Converter={StaticResource ResultColorConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <ScrollViewer Grid.Column="1" 
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto" >
                            <StackPanel Name="resultContainer"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="结论总览" Width="300">
                    <Model:GridLineDecorator x:Name="treeViewDecorator"
                        GridLineBrush="{DynamicResource 边框颜色}" ClipToBounds="True">
                        <TreeView Style="{StaticResource TreeViewStyleResultSummarySave}" ItemsSource="{Binding Categories}" x:Name="treeSchema1">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}"/>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Model:GridLineDecorator>
                </TabItem>
            </TabControl>
        </Border>

    </Grid>
</basemodel:DockControlDisposable>
