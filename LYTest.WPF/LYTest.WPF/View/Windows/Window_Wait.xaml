<Window x:Class="LYTest.WPF.View.Windows.Window_Wait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LYTest.WPF.View.Windows" xmlns:controls="clr-namespace:LYTest.WPF.Controls"
        mc:Ignorable="d"
        Title="Window_Wait" Height="250" Width="350" 
        WindowStyle="None"
        AllowsTransparency="True" 
        ResizeMode="CanResizeWithGrip"  
        WindowStartupLocation="CenterScreen"
        Background="Transparent">
    <Window.Effect>
        <DropShadowEffect Color="Gray"   ShadowDepth="0" BlurRadius="5" Opacity="1" Direction="0.5"/>
    </Window.Effect>
    <Border BorderThickness="1"    Margin="2" UseLayoutRounding="True">
        <Grid Background="White"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid   Background="#00bfb7"    MouseMove="Window_MouseMove">
                <StackPanel Orientation="Horizontal"  VerticalAlignment="Center"  HorizontalAlignment="Left" >
                    <Image Source="{StaticResource  等待}" Width="20" Height="20" Margin="10 0 0 0"/>
                    <TextBlock Text="等待中"  Margin="5 0 "   VerticalAlignment="Center" Foreground="White" FontSize="14"/>
                </StackPanel>

            </Grid>
            <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center" >
                <controls:LoadingWait Width="25" Height="25" />
                <TextBlock Text="等待执行完毕..." Name="textBlock" VerticalAlignment="Center" Margin="5 0" 
                           FontSize="20" Foreground="#00bfb7" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
