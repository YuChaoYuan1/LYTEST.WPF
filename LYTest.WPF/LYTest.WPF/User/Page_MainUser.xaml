<Page x:Class="LYTest.WPF.User.Page_MainUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LYTest.WPF.User"
      mc:Ignorable="d" 
      FontSize="24"
      Background="{DynamicResource 窗口背景色}"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page_MainUser">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
			x:Name="stackPanel"
			VerticalAlignment="Center">
            <Button Content="修改密码"
				Click="StackPanel_Click"
				x:Name="buttonChangePassword"
				Width="160" Height="40"
				Margin="10"/>
            <Button Content="添加用户"
				Visibility="{Binding CurrentUser.USER_POWER, ConverterParameter=1, Converter={StaticResource UserVisibilityConverter}}"
				Click="StackPanel_Click"
				x:Name="buttonAddUser"
				Width="160" Height="40"
				Margin="10"/>
            <Button Content="删除用户"
				Click="StackPanel_Click"
				Visibility="{Binding CurrentUser.USER_POWER, ConverterParameter=1, Converter={StaticResource UserVisibilityConverter}}"
				x:Name="buttonDeleteUser"
				Width="160" Height="40"
				Margin="10"/>
            <Button Content="切换用户"
				Click="StackPanel_Click"
				x:Name="buttonChangeUser"
				Width="160" Height="40"
				Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
