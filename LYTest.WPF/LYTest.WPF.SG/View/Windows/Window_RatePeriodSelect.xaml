<Window x:Class="LYTest.WPF.SG.View.Windows.Window_RatePeriodSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window_RatePeriodSelect" Height="385" Width="300"
        WindowStyle="None"
        AllowsTransparency="True" 
        ResizeMode="CanResizeWithGrip"  
        Background="Transparent"
        FontSize="18" >
    <Grid Background="#00bfb7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="3">
                <ComboBox Name="CmbHour" FontSize="18" Height="30"  Width="60" ToolTip="小时"/>
                <TextBlock Text=":" FontSize="22" Margin="3" Foreground="White"/>
                <ComboBox Name="CmbMinute" FontSize="18" Height="30" Width="60" ToolTip="分钟"/>
                <ComboBox x:Name="CmbRate" IsEditable ="False" ToolTip="费率" FontSize="18" Width="65" Margin="3,3,10,3"/>
                <Button  Grid.Row="1" Style="{DynamicResource SuccessButtonStyle}" Grid.Column="2"
                        Click="Add_Click"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Height="30" Width="60"
                        Content="添加"/>
            </StackPanel>
            <TextBlock x:Name="txbMsg" Visibility="Collapsed"/>
        </StackPanel>

        <ListBox Grid.Row="1" Name="selectListBox" />


        <Button Grid.Row="2" HorizontalAlignment="Left" Style="{Binding}" Margin="5 0" Height="22" BorderThickness="0"  Background="Transparent" Foreground="White" Click="ClearSelectText" ToolTip="清空">
            <Image Source="{StaticResource 清空}"  ToolTip="选中项目删除当前项目,没有选中项目清空"   />
        </Button>
        <Button  Grid.Row="2" Style="{DynamicResource SuccessButtonStyle}" Grid.Column="2"
                        Click="Confirm_Click"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="30" Width="100"
                        Margin="3"
                        Content="确  认"/>
    </Grid>
</Window>
