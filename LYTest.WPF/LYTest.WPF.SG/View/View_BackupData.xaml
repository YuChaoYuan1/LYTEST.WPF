<basemodel:DockControlDisposable   
    x:Class="LYTest.WPF.SG.View.View_BackupData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:basemodel="clr-namespace:LYTest.WPF.SG.Model"
    mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Border Background="White" CornerRadius="10" Margin="10">
            <ListBox Name="lists" SelectedItem="{Binding SelectBackup,Mode=TwoWay}"  
                 IsSynchronizedWithCurrentItem="True" SelectionMode="Single" 
                 Focusable="False" Background="Transparent" ItemsSource="{Binding BackupFileList}" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 Margin="10" BorderThickness="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" Style="{x:Null}"  Width="120"  Height="120" BorderThickness="0" Click="Button_Click">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <Image Source="{StaticResource 备份包}" Margin="5 5 5 0"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10" Height="50">
            <Button Style="{DynamicResource SuccessButtonStyle}"
                        Width="120" 
                        FontSize="18"
                        CommandParameter="BackupData" Command="{Binding LocalCommand}"
                        Content="手动备份"/>
            <Button Style="{DynamicResource SuccessButtonStyle}"
                        Width="120" Margin="10,0"
                        FontSize="18"
                        Click="BorderRadiusButton_Click"
                        Content="预览数据"/>
        </StackPanel>

        <Button Grid.Row="1" Style="{DynamicResource SuccessButtonStyle}"
                        HorizontalAlignment="Right" Margin="10"
                        Width="120" Height="50"
                        FontSize="18"
                        Click="ExporttDataClick"
                        Content="导出数据" />

    </Grid>
</basemodel:DockControlDisposable>
