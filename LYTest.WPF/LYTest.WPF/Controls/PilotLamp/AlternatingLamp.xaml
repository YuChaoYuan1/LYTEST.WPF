<UserControl x:Class="LYTest.WPF.Controls.PilotLamp.AlternatingLamp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.Controls.PilotLamp"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="52">

    <UserControl.Resources>
        <Storyboard x:Key="storyBoard" >
            <ColorAnimation Storyboard.TargetName="brush"    AutoReverse="True"
                       Storyboard.TargetProperty="Color"    From="Green"   To="GreenYellow" 
                       Duration="0:0:0.3" BeginTime="0:0:0"/>
            <ColorAnimation Storyboard.TargetName="brush2"    AutoReverse="True"
                       Storyboard.TargetProperty="Color"    From="Green"   To="Yellow" 
                       Duration="0:0:0.3" BeginTime="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetName="brush3"    AutoReverse="True"
                       Storyboard.TargetProperty="Color"    From="Green"   To="Red" 
                       Duration="0:0:0.3" BeginTime="0:0:0.6"/>
        </Storyboard>
    </UserControl.Resources>

    <!--走马灯效果，轮着切换-->
    <StackPanel Orientation="Horizontal">
        <Ellipse  StrokeThickness="0.5" Width="16"><!--画椭圆-->
            <Ellipse.Stroke>   <!--边框颜色-->
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Ellipse.Stroke>
            <Ellipse.Fill>  <!--填充颜色-->
                <SolidColorBrush x:Name="brush"  Color="LightGray"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse StrokeThickness="0.5" Width="16" Margin="2 0 0 0">
            <Ellipse.Stroke>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <SolidColorBrush x:Name="brush2"  Color="LightGray"/>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse  StrokeThickness="0.5" Width="16" Margin="2 0 0 0">
            <Ellipse.Stroke>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <SolidColorBrush x:Name="brush3"  Color="LightGray"/>
            </Ellipse.Fill>
        </Ellipse>
    </StackPanel>
</UserControl>
