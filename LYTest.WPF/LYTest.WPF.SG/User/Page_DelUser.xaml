<Page x:Class="LYTest.WPF.SG.User.Page_DelUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LYTest.WPF.SG.User"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Background="{DynamicResource 窗口背景色}" 
      Title="Page_DelUser">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ListBox Name="listBoxUsers" Height="250" Margin="10" Width="160">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding UserName}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="删除用户" Margin="10,20"  Name="buttonDelete"  Click="ButtonDelete_Click"
                        Style="{DynamicResource PrimaryButtonStyle}" Height="30"/>
            </StackPanel>
            <TextBlock x:Name="textBlockLog" Grid.Row="1" Margin="10" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
