<basemodel:DockControlDisposable  
             xmlns:basemodel="clr-namespace:LYTest.WPF.SG.Model"
             x:Class="LYTest.WPF.SG.View.View_Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LYTest.WPF.SG.View"
             mc:Ignorable="d" 
             Foreground="{DynamicResource 字体颜色标准}"
             d:DesignHeight="300"
             d:DesignWidth="600">
    <DataGrid Name="dataGrid" BorderThickness="0" HeadersVisibility="None"
              Background="Transparent" SelectionMode="Single" SelectionUnit="FullRow"
              GridLinesVisibility="Horizontal" >
        <DataGrid.ContextMenu>
            <ContextMenu>
                <MenuItem Name="menuItemClearLog" Header="清空当前日志" Click="MenuItem_Click"/>
            </ContextMenu>
        </DataGrid.ContextMenu>
        <DataGrid.Columns>
            <DataGridTextColumn Header="时间" Width="auto" IsReadOnly="True"
                                    Binding="{Binding Time, StringFormat=\{0:HH:mm:ss\}}" /> 
                                   
            <DataGridTextColumn Header="类型" Width="auto"  IsReadOnly="True"
                                    Binding="{Binding LogSource}"  />

            <DataGridTextColumn  ElementStyle="{StaticResource StyleWrapText}"
                                     Header="说明" 
                                     Binding="{Binding Message}"
                                     Width="*" IsReadOnly="True" />
            <!--<DataGridTextColumn.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                    </Style>
                </DataGridTextColumn.CellStyle>-->

        </DataGrid.Columns>
    </DataGrid>
</basemodel:DockControlDisposable> 
